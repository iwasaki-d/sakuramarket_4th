= simple_form_for(@cart, wrapper: :horizontal_form, html: {class: 'form-horizontal'} )do |f|
  = f.error_notification
  .form-inputs
    = f.input :shipping_name
    = f.input :shipping_email
    = f.input :shipping_postal_code
    = f.input :shipping_address
    = f.input :delivery_day, as: :string, label: '年月日(yyyy-mm-dd)',
     input_html: { class: 'datepicker', readonly:"readonly" , data: {selectable_days: @cart.selectable_delivery_day} }
    = f.input :delivery_time_string
  .form-actions
    = f.button :submit
